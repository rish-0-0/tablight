{
  "manifest_version": 3,
  "name": "TabLight",
  "version": "0.1.0",
  "description": "Spotlight for Chrome - quickly switch between tabs",
  "permissions": [
    "tabs",
    "activeTab",
    "sessions"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "toggle-tablight": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open TabLight search"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
